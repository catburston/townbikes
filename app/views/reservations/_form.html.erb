<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
    <li> <%= error.message %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for [ @reservation ] do |f| %>
  <div class="row">
    <div class="large-8 columns">
      <label>From Date
        <%= f.date_field :from_date, value: Date.today, min: Date.today %>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="large-8 columns">
      <label>To Date
        <%= f.date_field :to_date, value: (Date.today+2.days), min: Date.today %>
      </label>
    </div>
  </div>
  <%= f.hidden_field :bicycle_id, value: @bicycle.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="row">
    <div class="large-8 columns">
      <%= f.submit "Save", class: "button" %>
    </div>
  </div>
<% end %>
