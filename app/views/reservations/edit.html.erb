<div class="row">
  <div class="large-12 columns">
    <div class="row collapse prefix-radius">
      <div class="small-8 columns">
        <h1>Edit reservation</h1>
        <% if current_user == @reservation.owner %>
          <%= render 'owner_form', reservation: @reservation %>
        <% else %>
          <%= render 'form', reservation: @reservation %>
        <% end %>
      </div>
      <div class="small-4 columns">
        <ul class="no-bullet">
          <li>
            <% if @reservation.bicycle.photo? %>
              <%= image_tag(@reservation.bicycle.photo_url(:thumb)) %>
            <% else %>
              <%= image_tag("/assets/images/tandem-thumb.png") %>
            <% end %>
          </li>
          <li><%= link_to 'Reservation history', reservations_path, class: "button" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
